<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_view"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="4dp"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <ProgressBar
        android:id="@+id/favorite_movie_background_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"/>
    <TextView
        android:id="@+id/favorite_movie_failed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/load_failed"
        android:layout_gravity="end"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/favorite_movie_layout_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favorite_movie_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:scaleType="centerCrop"
            android:contentDescription="@string/favorite_title" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/favorite_movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorRoyalBlack"
                android:text="Iron Man 3"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/favorite_movie_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/colorRoyalBlack"
                android:layout_marginTop="2dp"
                android:maxLength="4"
                android:text="2020 05 10"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/favorite_movie_popularity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRoyalBlack"
                android:layout_marginStart="4dp"
                android:text="2004.4" />

            <TextView
                android:id="@+id/favorite_movie_vote_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRoyalBlack"
                android:layout_marginStart="4dp"
                android:text="123" />

            <TextView
                android:id="@+id/favorite_movie_rating"
                android:layout_width="match_parent"
                android:textColor="@color/colorRoyalBlack"
                android:layout_marginStart="4dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>